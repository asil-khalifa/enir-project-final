        background_color: 48/255, 194/255, 141/255, 1
        font_size: '25dp'
        on_press: 
            app.quiz_score = 0
            app.manager.push('Quiz2Question1')

    Button:
        text: 'GENERAL QUIZ (EASY)' 
        #FIRST QUIZ BY ADEESH
        size_hint: 0.8, 0.7
        height: '100dp'
        pos_hint: {'center_x':0.5}
        background_normal: ''
        background_color: 48/255, 194/255, 141/255, 1
        font_size: '25dp'
        on_press: 
            app.quiz_score = 0
            app.manager.push('Quiz3Question1')

    Button:
        text: 'GENERAL QUIZ (HARD)' 
        #SECOND QUIZ BY ADEESH
