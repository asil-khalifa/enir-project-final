<QuizLayout@BoxLayout>:
    canvas.before:
        Rectangle:
            size: self.size
            source: 'images/home_bg_2.jpg'

    orientation: 'vertical'
    spacing: '15dp'
    padding: [0, 0, 0, '15dp']
    Label:
        text: 'SELECT QUIZ'
        font_name: 'fonts/ChrustyRock-ORLA.ttf'
        font_size: '35dp'
        size_hint: 1, 0.8
        height: '100dp'
        color: 0, 0, 0, 1
        #48/255, 194/255, 141/255, 1
    
    Button:
        text: "KIDS' QUIZ"
        size_hint: 0.8, 0.7
        height: '100dp'
        pos_hint: {'center_x':0.5}
        background_normal: ''
        background_color: 48/255, 194/255, 141/255, 1
        font_size: '25dp'
        on_press:
            app.quiz_score = 0
            app.manager.push('Quiz1Question1')
    Button:
        text: 'SCHOOL LEVEL QUIZ'
        size_hint: 0.8, 0.7
        height: '100dp'
        pos_hint: {'center_x':0.5}
        background_normal: ''
        background_color: 48/255, 194/255, 141/255, 1
        font_size: '25dp'
        on_press: 
            app.quiz_score = 0
            app.manager.push('Quiz6Question1')

    Button:
