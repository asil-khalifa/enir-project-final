<LayoutGovSchemes@ScrollView>:
    do_scroll_x: False
    LayoutGovSchemesBox:

<LayoutGovSchemesBox@BoxLayout>:
    size_hint_min_y: '650dp' #This sets the minimum total heigth of the boxlayout
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    orientation: 'vertical'
    spacing: '15dp'
    padding: [0, '15dp', 0, '15dp']
    
    Button:
        text: 'THE NATIONAL ENVIRONMENTAL POLICY 2006'
        text_size: root.width/1.15, None
        size_hint: 0.9, 1
        pos_hint: {'center_x':0.5}
        background_normal: ''
        background_color: 48/255, 194/255, 141/255, 1
        on_release:
            app.gov_schemes_image_src = 'images/gov_schemes_nep_2006.jpeg'
            app.manager.push('GovSchemesImageScreen')   

    Button:
